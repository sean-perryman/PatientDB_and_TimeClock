%div{ :class => 'container well' }
	%div{ :class => 'col-md-6' }
		= simple_form_for @user, html: { method: :put } do |f|
			= f.error_notification
			= f.input :name
			= f.input :email
			= f.input :employee_id
			
			= f.input :password
			= f.input :password_confirmation
			
			- if current_user.admin
				= f.input :admin, :label => "User can make changes to other users' accounts?"
				= f.input :patient_record_access, :label => "User can access patient records?"

			= f.button :submit, "Update"